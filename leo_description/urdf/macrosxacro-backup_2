          </noise>
          <visibility_mask>${gazebo_camera_visibility_mask}</visibility_mask>
          <visualize>true</visualize>
        </camera>
        <visualize>true</visualize>
      </sensor>
    </gazebo>


    <!-- rocker differential -->
    <gazebo>
      <plugin name="leo_gz::DifferentialSystem" filename="libleo_gz_differential_plugin.so">
