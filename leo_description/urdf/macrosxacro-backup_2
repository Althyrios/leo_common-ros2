  <!-- LEO GAZEBO -->

  <xacro:macro name="leo_gazebo"
               params="robot_ns:=''
                collision:=true
                high_quality_mesh:=false
                gazebo_preserve_fixed_joint:=false
                gazebo_camera_enable:=true
                gazebo_camera_update_rate:=15.0
                gazebo_camera_width:=640
                gazebo_camera_height:=480
                gazebo_camera_horizontal_fov:=${87*pi/180}
                gazebo_camera_vertical_fov:=${58*pi/180}
                gazebo_camera_color_clip_near:=0.5
                gazebo_camera_color_clip_far:=1000.0
                gazebo_camera_depth_clip_near:=0.5
                gazebo_camera_depth_clip_far:=5.0
                gazebo_camera_noise_mean:=0.0
                gazebo_camera_noise_stddev:=0.001
                gazebo_camera_visibility_mask:=0
                ">

    <xacro:property name="link_prefix" value=""/>
    <xacro:if value="${robot_ns != '' and robot_ns != '/'}">
      <xacro:property name="link_prefix" value="${robot_ns}/"/>
    </xacro:if>

    <!-- base ODE properties -->
